<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Create a New Idea</h1>
        <div style="width: 30%; margin: 25px auto;">
       <form action="/ideas" method="POST">

            <div class="form-group">
                <input class="form-control" type="text" placeholder="short description" name="name">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" placeholder="date [DAY YEAR MONTH | 10 2020 VII]" name="date">
            </div>
     
            <div class="form-group">
                <input class="form-control" type="text" placeholder="description" name="description">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Why is it a good idea?" name="why">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" placeholder="Who does it help?" name="who">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" placeholder="How valuable is it? From 8 to 99" name="value">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" placeholder="Added by:" name="addedBy">
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>  
        </form>
            <a href="/ideas" style="text-align: center;"> Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>