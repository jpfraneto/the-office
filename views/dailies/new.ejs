<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Create a New Dailie</h1>
        <div style="width: 30%; margin: 25px auto;">
       <form action="/dailies" method="POST">

            <div class="form-group">
                <input class="form-control" type="text" placeholder="index" name="index">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="date [DAY YEAR MONTH | 10 2020 VII]" name="date">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" placeholder="git commit" name="gitcommit">
            </div>

            <div class="form-group">
                <textarea class="form-control" type="text" placeholder="description" rows="16" cols="50" name="description"></textarea>
            </div>

            <div class="form-group">
                <input class="form-control" type="number" placeholder="feeling, from 3 to 333" name="feeling">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" placeholder="password" name="password">
            </div>
            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>  
        </form>
            <a href="/dailies" style="text-align: center;"> Go Back</a>
        </div>
    </div>
</div>

</div>

</div>
</body>
</html>